{{!< portal}}

{{#contentFor 'styles'}}
<link rel="stylesheet" href="/assets/css/page-list.css">
{{/contentFor}}

<div class="main">
  <div class="py-container">
    <!--bread-->
    <div class="bread">
      <ul class="fl sui-breadcrumb">
        {{#if category.parent.parent}}
        <li><a href="/list/{{category.parent.parent.id}}">{{category.parent.parent.name}}</a></li>
        {{/if}}
        {{#if category.parent}}
        <li><a href="/list/{{category.parent.id}}">{{category.parent.name}}</a></li>
        {{/if}}
        <li class="active">{{category.name}}</li>
      </ul>
    </div>
    <!--selector-->
    <div class="clearfix selector">
      <div class="type-wrap">
        <div class="fl key">摄像头像素</div>
        <div class="fl value">
          <ul class="type-list">
            <li><a>1200万以上</a></li>
            <li><a>800-1199万</a></li>
            <li><a>1200-1599万</a></li>
            <li><a>1600万以上</a></li>
            <li><a>无摄像头</a></li>
          </ul>
        </div>
      </div>
      <div class="type-wrap">
        <div class="fl key">价格</div>
        <div class="fl value">
          <ul class="type-list">
            <li><a>0-500元</a></li>
            <li><a>500-1000元</a></li>
            <li><a>1000-1500元</a></li>
            <li><a>1500-2000元</a></li>
            <li><a>2000-3000元 </a></li>
            <li><a>3000元以上</a></li>
          </ul>
        </div>
      </div>
    </div>
    <!--details-->
    <div class="details">
      <div class="sui-navbar">
        <div class="navbar-inner filter">
          <ul class="sui-nav">
            <li{{#equal sort 'commend'}} class="active"{{/equal}}><a href="?sort=commend">综合</a></li>
            <li{{#equal sort 'quantity'}} class="active"{{/equal}}><a href="?sort=quantity">销量</a></li>
            <li{{#equal sort 'market_time'}} class="active"{{/equal}}><a href="?sort=market_time">新品</a></li>
            <li{{#equal sort '-price'}} class="active"{{/equal}}{{#equal sort 'price'}} class="active"{{/equal}}><a href="?sort={{^equal sort '-price'}}-{{/equal}}price">价格</a></li>
          </ul>
        </div>
      </div>
      <div class="goods-list">
        <ul class="yui3-g">
          {{#each products}}
          <li class="yui3-u-1-5">
            <div class="p-img"><a href="/item/{{id}}"><img data-src="{{thumbnail}}"></a></div>
            <div class="price"><strong><em>¥</em><i>{{price}}</i></strong></div>
            <div class="attr"><em>{{name}}</em></div>
            <div class="commit"><i class="command">已售出{{sales}}</i></div>
            <div class="operate">
              <a href="cart-add.html" class="sui-btn btn-bordered btn-danger">加入购物车</a>
              <a href="#" class="sui-btn btn-bordered">对比</a>
              <a href="#" class="sui-btn btn-bordered">关注</a>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="fr page">
        {{pagination page totalPages}}
      </div>
    </div>
  </div>
</div>

{{#contentFor 'scripts'}}
<script src="/assets/js/lazyload.min.js"></script>
<script>
  $('.goods-list img').lazyload()
</script>
{{/contentFor}}
